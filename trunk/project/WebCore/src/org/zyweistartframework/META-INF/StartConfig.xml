<?xml version="1.0" encoding="UTF-8" ?>
<!--默认配置文件-->
<GlobalConfig>
	<!-- 常量 -->
	<Constants>
		<!--开发模式-->
		<Constant name="DEVMODE" value="true"/>
		<!--全局编码模式-->
		<Constant name="ENCODING" value="UTF-8"/>
		<!-- 数据保存主路径 -->
		<Constant name="ROOTPATH" value="/DATA"/>
		<!--文件临时存放的目录-->
		<Constant name="TMPPATH" value="/TMP/"/>
		<!--文件上传文件大小默认1G-->
		<Constant name="MAXUPLOADSIZE" value="1073741824"/>
		<!--允许上传的类型-->
		<Constant name="ALLOWUPLOADTYPES">*</Constant>
	</Constants>
	<!-- 拦截器 -->
	<Interceptors>
        <Interceptor class="org.zyweistartframework.controller.interceptor.ParametersInterceptor"/>
        <Interceptor class="org.zyweistartframework.controller.interceptor.fileupload.UploadFileInterceptor"/>
        <Interceptor class="org.zyweistartframework.controller.interceptor.ToKenInterceptor"/>
    </Interceptors>
	<!--持久化配置-->
	<Persistent>
		<!--延迟加载模式-->
		<Param name="LAZYLOADMODE">true</Param>
		<!--自动生成数据库表-->
		<Param name="GENERATETABLE">false</Param>
		<!--添加过滤字符，防止生成表或字段是应该字段为关键字而出错 -->
		<Param name="ADDFILTER">false</Param>
		<!--添加过滤字符，在数据表字段中加入特定字符-->
		<Param name="ADDFILTERCHAR">false</Param>
		<!--数据库选项OracleDialect,MySQLDialect,MSSQLServerDialect-->
		<Param name="DIALECT">OracleDialect</Param>
	</Persistent>
</GlobalConfig>